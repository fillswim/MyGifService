pipeline {
    agent {
        label 'builder'
    }

    tools {
        gradle 'Gradle 8.1.1'
    }

    environment {
        DOCKER_IMAGE        = 'sqlite'
        DOCKERHUB_USERNAME  = 'fillswim'
        DOCKER_REGISTRY     = 'docker.io'
    }

    stages {
        stage('Git pull') {
            steps {
                echo "====== Git pull ======"
                sh 'git pull origin master'
            }
        }

        stage('Gradle build') {
            steps {
                echo "====== Gradle build ======"
                withGradle {
                    sh 'gradle clean build'
                }
            }
        }

        stage('Remove old docker image') {
            steps {
                echo "====== Remove old image ======"
                sh 'docker rmi -f fillswim/mygifservice:latest'
            }
        }

        stage('Docker build') {
            steps {
                echo "====== Docker build ======"
                sh 'docker build -t fillswim/mygifservice:latest .'
            }

        }

        stage('Docker login') {
            steps {
                echo "======== Docker login ========"
                // sh 'cat /home/filldocker/dockerhub_token.txt | docker login --username fillswim --password-stdin'
                sh 'echo ${DOCKERHUB_USERNAME}'
                sh 'echo ${TEST_PASSWORD}'
                sh 'docker login --username ${DOCKERHUB_USERNAME} --password ${DOCKERHUB_TOKEN} ${DOCKER_REGISTRY}'
            }
        }

        //stage('Docker push') {
//
        //    environment {
        //        DISCRORD_WEBHOOK_LINK = credentials('Discord_webhook')
        //    }
//
        //    steps {
        //        echo "======== Docker push ========"
        //        sh 'docker push fillswim/mygifservice:latest'
//
        //        discordSend description: "GifService Build",
        //        link: env.BUILD_URL,
        //        result: currentBuild.currentResult,
        //        title: JOB_NAME,
        //        webhookURL: DISCRORD_WEBHOOK_LINK
//
        //    }
        //}

    }
}